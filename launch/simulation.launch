<launch>

  <arg name="load_world" default="false"/>
  <arg name="gazebo_gui" default="true"/>

  <!-- model setup -->
  <arg name="model" default="$(find open_critter)/urdf/critter.xacro"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
  <node  name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" args="-z 1.0 -unpause -urdf -model open_critter -param robot_description" respawn="false" output="screen" />

  <!-- simulator -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find open_critter)/worlds/practice.world" if="$(arg load_world)"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
    <arg name="headless" value="false"/>
    <arg name="recording" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- state publishers -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <!-- controllers -->
  <!-- <node name="controller_spawner" pkg="controller_manager" type="spawner" ns="open_critter" output="screen" args="joint_state_controller"/> -->

</launch>
